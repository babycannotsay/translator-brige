{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/semi": [2, "never"],
        "semi": "off",
        "curly": [2, "multi-line"],
        "eqeqeq": [2, "smart"],
        "space-before-function-paren": [2, "always"],
        "max-len": [2, { "code": 120 }],
        "indent": [2, 4, { "SwitchCase": 1 }],
        "quotes": [2, "single"],
        "comma-dangle": ["error", "always-multiline"]
    }
}
